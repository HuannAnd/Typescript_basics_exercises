{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Jest",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "args": [
                "-i"
            ],
             "skipFiles": [
              "<node_internals>/**/*.js", "node_modules",
            ]
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "src/index.ts",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "src/out/**/*.js"
            ]
        }
    ]
}